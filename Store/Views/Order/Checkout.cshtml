@model Order

<h2>Check out now</h2>
<p>Enter your details, and we'll make your drink!</p>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Customer Information</h3>
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Contact Details</h3>
    <div class="form-group">
        <label>Phone number:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>